@{ 
  var subscriptionId = ViewContext.RouteData.Values["subscriptionId"];
}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - Microsoft Azure Billing Explorer</title>
  @Styles.Render("~/Content/css")
  @Styles.Render("~/Content/bootstrap-datepicker")
  @Scripts.Render("~/bundles/modernizr")
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        @Html.RouteLink("Microsoft Azure Billing Explorer", "Default", new { controller = "Home", action = "Index" }, new { @class = "navbar-brand" })
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li>@Html.RouteLink("Subscriptions", "Default", new { controller = "Subscriptions" }, null)</li>
          <li>@Html.RouteLink("Rates", "SubscriptionDetails", new { controller = "Rates", subscriptionId = subscriptionId }, null)</li>
          <li>@Html.RouteLink("Usage", "SubscriptionDetails", new { controller = "Usage", subscriptionId = subscriptionId }, null)</li>
        </ul>
        @Html.Partial("_LoginPartial")
      </div>
    </div>
  </div>
  <div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
      <p>&copy; @DateTime.Now.Year - Microsoft Azure Billing Explorer</p>
    </footer>
  </div>

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @Scripts.Render("~/bundles/bootstrap-datepicker")
  @RenderSection("scripts", required: false)
</body>
</html>
